<div class="contextual">
<%= link_to l(:button_edit), "/projects/#{project_id}/test_plans/#{@test_plan.id}/edit",
            :onclick => 'showAndScrollTo("update", "issue_notes"); return false;',
            :class => 'icon icon-edit', :accesskey => accesskey(:edit) if @test_plan.editable? %>
<%= link_to l(:button_delete), "/projects/#{project_id}/test_plans/#{@test_plan.id}",
            :data => {:confirm => test_plan_destroy_confirmation_message(@test_plan)},
            :method => :delete, :class => 'icon icon-del' if @test_plan.deletable? %>
</div>
