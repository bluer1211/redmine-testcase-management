<div class="contextual">
  <%= link_to l(:label_test_plan_new), new_project_test_plan_path(@project), :class => 'icon icon-add new-issue' %>
  <%= actions_dropdown do %>
    <% if User.current.allowed_to?(:import_test_plans, @project, :global => true) %>
      <%= link_to l(:button_import),
                  new_test_plans_import_path(:project_id => @project),
                  :class => 'icon icon-import' %>
    <% end %>
  <% end %>
</div>

<h2><%=l(:label_test_plans)%></h2>

<div class="autoscroll">
  <table class="list issues odd-even sort-by-id sort-desc">
    <thead>
      <tr>
        <th><%=l(:field_name)%></th>
        <th><%=l(:field_status)%></th>
        <th><%=l(:field_estimated_bug)%></th>
        <th><%=l(:field_user)%></th>
        <th><%=l(:field_begin_date)%></th>
        <th><%=l(:field_end_date)%></th>
      </tr>
    </thead>
    <tbody>
      <% @test_plans.each do |test_plan| %>
      <tr>
        <td><%= link_to test_plan.name, "/projects/#{@project.name}/test_plans/#{test_plan.id}" %></td>
        <td><%= test_plan.issue_status.name %></td>
        <td><%= test_plan.estimated_bug %></td>
        <td><%= test_plan.user.name %></td>
        <td><%= yyyymmdd_date(test_plan.begin_date) %></td>
        <td><%= yyyymmdd_date(test_plan.end_date) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% other_formats_links do |f| %>
  <%= f.link_to_with_query_parameters 'CSV',
                                      :format => 'csv' %>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => 'test_plans/sidebar' %>
<% end %>
