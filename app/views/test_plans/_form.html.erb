<div class="box tabular">
  <p><%= form.label l(:field_test_plan_name) %>
    <%= form.text_field :name, size: 80, required: true, id: 'name' %></p>
  <p>
    <%= form.label l(:field_begin_date) %>
    <%= form.date_field :begin_date, id: 'begin_date' %></p>
  <p>
    <%= form.label l(:field_end_date) %>
    <%= form.date_field :end_date, id: 'end_date' %></p>
  <p>
    <%= form.label l(:field_user) %>
    <% if @test_plan and @test_plan.user %>
      <%= form.select :user, @user_candidates, selected: @test_plan.user.id %>
    <% else %>
    <%= form.select :user, @user_candidates %>
    <% end %>
  </p>
  <p>
    <%= form.label l(:field_estimated_bug) %>
    <%= form.number_field :estimated_bug, in: 0..9999, id: 'estimated_bug' %></p>
  <p>
    <%= form.label l(:field_status) %>
    <% if @test_plan and @test_plan.issue_status %>
      <%= form.select :issue_status, @issue_status_candidates, selected: @test_plan.issue_status.id %>
    <% else %>
      <%= form.select :issue_status, @issue_status_candidates %>
    <% end %>
  </p>
</div>
