<h2><%= breadcrumb %><%=l(:label_test_case_edit)%> #<%= @test_case.id %></h2>

<%= form_with model: @test_case, url: (@test_plan_given ? project_test_plan_test_case_path : project_test_case_path) do |f| %>
  <%= render partial: 'test_cases/form', locals: {form: f} %>
  <%= f.submit l(:button_update) %>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => 'test_cases/sidebar' %>
<% end %>
